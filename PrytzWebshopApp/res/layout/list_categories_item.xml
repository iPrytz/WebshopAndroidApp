<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#66FFFFFF">
    
    <ImageView 
        android:id="@+id/thumbnail_category"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/picDescription"/>
    
    <TextView 
        android:layout_toRightOf="@id/thumbnail_category"
        android:textSize="16sp"
        android:id="@+id/list_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView 
        android:layout_below="@id/list_category_name"
        android:layout_toRightOf="@id/thumbnail_category"
        android:textSize="12sp"
        android:id="@+id/list_products_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    

</RelativeLayout>
